<div class="pb-2">
    <form action="/forum/questiondetailuser/{{qtn.id_pregunta}}" method="post">
    <div class="row profile-filters">
         <div class="col-ask-profile col-12 col-lg-4 col-md-4 col-sm-12">
            <div class="answers-filter">
                <h5>Filtrar respuestas</h5>
            </div>
        </div>
        <div class="col-ask-profile col-12 col-lg-4 col-md-4 col-sm-12">
            <div class="form-group answers-filter">
                <select class="form-control" name="calificacion" onchange="activatebtnA2({{qtn.id_pregunta}}, {{user.id_usuario}});">
